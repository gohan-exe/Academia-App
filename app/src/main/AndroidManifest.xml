<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Academia"
        tools:targetApi="31">

        <!-- Configura MainActivity como tela inicial -->
        <activity
            android:name=".views.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Outras atividades -->
        <activity
            android:name=".views.EscolhaTipoActivity"
            android:exported="false" />
        <activity
            android:name=".views.ListaAlunosActivity"
            android:exported="false" />
        <activity
            android:name=".views.EditarPlanoActivity"
            android:exported="false" />
        <activity
            android:name=".views.TreinadorActivity"
            android:exported="false" />
        <activity
            android:name=".views.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".views.CadastroActivity" />
        <activity
            android:name=".views.AlunoActivity" />
    </application>

</manifest>
