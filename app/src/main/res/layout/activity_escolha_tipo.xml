<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EF0D1A66"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Gráfico para exibir a contagem de atribuições -->
    <TextView
        android:id="@+id/txv_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="16dp" />

    <!-- Botão Aluno -->
    <Button
        android:id="@+id/btnAluno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Atribuições"
        android:visibility="gone"
        android:backgroundTint="@color/blue_primary" />

    <!-- Botão Treinador -->
    <Button
        android:id="@+id/btnTreinador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Planos de Treino"
        android:visibility="gone"
        android:backgroundTint="@color/blue_primary" />

    <!-- Botão Voltar -->
    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Voltar"
        android:backgroundTint="@color/blue_primary" />

</LinearLayout>
