<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:padding="16dp"
    tools:context=".views.EditarPlanoActivity">

    <!-- Título da página -->
    <TextView
        android:id="@+id/txtTituloEdtPlano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar Plano de Treino"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp" />

    <!-- Campo de entrada para o título do plano -->

    <!-- Campo de entrada para a descrição do plano -->

    <!-- Botão para salvar as alterações no plano -->

    <EditText
        android:id="@+id/edtTituloPlano"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/edittext_background"
        android:hint="Título do Plano"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#B0C4DE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtTituloEdtPlano" />

    <EditText
        android:id="@+id/edtDescricaoPlano"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_background"
        android:hint="Descrição do Plano"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#B0C4DE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtTituloPlano" />

    <Button
        android:id="@+id/btnSalvarPlano"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue_primary"
        android:text="Salvar Alterações"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
